<p id="notice"><%= notice %></p>

<h1>Listing Special Tags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_tags.each do |special_tag| %>
      <tr>
        <td><%= special_tag.name %></td>
        <td><%= link_to 'Show', special_tag %></td>
        <td><%= link_to 'Edit', edit_special_tag_path(special_tag) %></td>
        <td><%= link_to 'Destroy', special_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


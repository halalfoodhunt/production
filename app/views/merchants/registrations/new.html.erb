<%= render 'layouts/merchant_header' %>
<div style="padding-left:0; padding-right:0;" class="container-fluid merchant-sign-up">
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" style="padding:50px;">
    <div class="text-center">
      <h3 style="color:white; margin-top:60px; font-weight:500; font-size:2em; text-transform:uppercase; text-shadow: 1px 2px 1px rgba(0, 0, 0, 1);">What is halalfoodhunt.com?</h3>
      <iframe src="https://www.youtube.com/embed/p5aMjwFeF1s" width="450" height="250" frameborder="0" style="" allowfullscreen></iframe></center>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" style="background: rgba(0,0,0,0.5); padding:50px;">
    <h4 style="color:white; margin-top:60px; text-transform:uppercase; text-shadow: 1px 2px 1px rgba(0, 0, 0, 1);"><center>CREATE AN AFFILIATE MERCHANT ACCOUNT</center></h4>
    <center><p style="color:white;">Please fill in your information to create an account with us. <br><center><p style="color:white;">Have an account? <%= render "devise/shared/links" %>.</center></p></p>
  </center>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), label_errors: true, inline_errors: true) do |f| %>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="field label-form" style="color:white;">
      <%= f.collection_select :region_id, Region.all, :id, :name, autofocus: true, layout: :inline %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="field label-form" style="color:white;">
      <%= f.email_field :email, label: "Your Email" %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="field label-form" style="color:white;">
      <%= f.text_field :contact_person_name, autofocus: true, label: "Your Name" %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="field label-form" style="color:white;">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Must be at least 6 characters long" %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="field label-form" style="color:white;">
      <%= f.phone_field :mobile_number, label: "Your Mobile Number" %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <div class="actions">
      <%= f.submit "Next", :class => 'btn btn-block btn-raised btn-danger' %>
    </div>
  </div>
<% end %>
<center><p style="color:white;">By creating an account, you agree to our <a href="#">terms.</a></p></center>
</div>
</div>
</div>
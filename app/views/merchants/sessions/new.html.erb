<div class="container-fluid sign-up">
  <div class="container container-table">
    <div class="row vertical-center-row">
      <div class="col-xs-12 col-md-12" style="background:rgba(255,255,255,0.6); padding-left:0px; padding-right:0px; box-shadow: 0 27px 24px 0 rgba(0,0,0,.2),0 40px 77px 0 rgba(0,0,0,.22);">
        <div class="col-xs-12 col-sm-6 col-md-4" style="padding-left:0px; padding-right:0px;">
          <span class="visible-md-block visible-lg-block">
            <img src="http://halalfoodhunt.com/wp-content/uploads/2016/08/sign-up_bg.jpg" class="img-responsive" alt="Responsive image">
          </span>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-8" style="padding-top:10px;">
          <center>
            <h3>MERCHANT LOGIN</h3>
            <p><center>Log in here if you already have an account with us.</center>
          </p><hr>
          </center>
          <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", { class: 'btn btn-block btn-raised btn-primary' } %>
          </div>
          <% end %>
          <br>
          <center><%= render "devise/shared/links" %></center>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/header' %>
<div class="container-fluid">
  <div class="container container-table" style="margin-top:80px;">
    <div class="row vertical-center-row">
      <div class="col-md-10 col-md-offset-1" style="background:rgba(255,255,255,0.6); padding-left:0px; padding-right:0px; box-shadow: 0 27px 24px 0 rgba(0,0,0,.2),0 40px 77px 0 rgba(0,0,0,.22);">
        <div class="col-xs-12 col-sm-12 col-md-12" style="padding:10px 30px;">
          <center>
            <h3>MERCHANT LOGIN</h3>
            <p><center>Log in here if you already have an account with us.</center>
            </p><hr>
          </center>
          <%= bootstrap_form_for(@merchant, as: @merchant, url: merchant_session_path(@merchant), label_errors: true, inline_errors: true) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", { class: 'btn btn-block btn-raised btn-danger' } %>
          </div>
          <% end %>
          <br>
          <center>      <p><center><%= link_to "Sign up", new_merchant_registration_path %><br />
      <%= link_to "Forgot your password?", new_merchant_password_path %><br /></center></p></center>
        </div>
      </div>
    </div>
  </div>
</div>

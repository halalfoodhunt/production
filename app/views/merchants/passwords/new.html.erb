<h2>Forgot your password?</h2>

<%= bootstrap_form_for(@merchant, as: @merchant, url: merchant_password_path(@merchant), label_errors: true, inline_errors: true) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "merchants/shared/links" %>

$(document).ready(function() {
  $('select#food-delivery-type').select2({
    placeholder: "Select food delivery types",
    allowClear: true
  });
});
$(document).ready(function() {
  $('select#cuisine-type').select2({
    placeholder: "Select cuisine types",
    allowClear: true
  });
});
</script>
<div class="container">
        <h2>Purchase Details</h2>
        <div class=" col-md-12 well product-details">
          <div class"panel-body">
            <table class="table">
              <thead>
                <tr>
                  <th>Product Name</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @product.name %></td>
                  <td><%= params[:order_details] %></td>
                  <td><%= @product.price %></td>
                </tr>
              </tbody>
            </table>
            </div>
          </div>
          </div>
          <div class="container">
 <%= form_for @order, :html => { :class => "form-horizontal" } do |product|  %>
        <% if @order.errors.any? %>
          <div id="error_explanation">

            <h2>
              <%= pluralize(@order.errors.count, "error") %> 
            </h2>
 
            <ul>
              <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <% order_details = @order.order_details.count %>
        <% order_detail_num = 1 %>

        <%= product.fields_for :order_details do |order_detail| %>
          <div class="row">
            <div class="col-md-12 well order_detail-box">
              <h3>order_detail <%= order_detail_num %></h3>
              <% order_detail_num += 1 %>

              <div class="form-group">
		            <%= order_detail.label :name, "Name:", class: "control-label col-sm-2"%>
                <div class="col-md-9">
		              <%= order_detail.text_field :name, class: "form-control"%>
                </div>
              </div>

              <div class="form-group">
		            <%= order_detail.label :email, "Email:", class: "control-label col-sm-2" %>
                <div class="col-md-9">
		              <%= order_detail.text_field :email, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
	     <% end %>

        <%= hidden_field_tag(:order_details, params[:order_details]) %>
        <%= product.hidden_field :product_id, value: params[:product_id] %>
        <%= hidden_field_tag(:product_id, params[:product_id]) %>
        <div class="actions"><script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data: { amount: @product.price*100, description: @product.name,key: Rails.application.secrets.stripe_publishable_key }></script></div>
	       <%= product.submit "Buy", class: "btn btn-success btn-lg col-md-4 col-md-offset-4" %>
      <% end %>
      </div>

<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/admin_sidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main-admin" style="padding:0;">
      <%= render 'layouts/topbar' %>
      <div class="col-md-10 col-md-offset-1" style="color:white; padding:10px; margin-bottom:20px;">
        <h5><i class="fa fa-list fa-1x"></i> FRIENDS CARDS Listings</h5>
        <div class="col-xs-6 col-sm-3">
          <div class="square" style="background:#EF6C3D">
            <div class="content">
              <div class="table">
                <div class="table-cell numbers">
                  <center>
                    <h1 style="font-size:6em; font-weight:100; line-height:1em;"><%= Friend.count %></h1>
                    <h4>FRIENDS</h4>
                  </center>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-sm-3">
          <div class="square" style="background:#FFB20E">
            <div class="content">
              <div class="table">
                <div class="table-cell numbers">
                  <center>
                    <h1 style="font-size:6em; font-weight:100; line-height:1em;"><%= @friends_cards.count %></h1>
                    <h4>FRIENDS CARDS</h4>
                  </center>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-sm-3">
          <div class="square" style="background:#C4A276">
            <div class="content">
              <div class="table">
                <div class="table-cell numbers">
                  <center>
                    <h1 style="font-size:6em; font-weight:100; line-height:1em;"><%= @friends_cards.where(paid: false).count %></h1>
                    <h4>PAID</h4>
                  </center>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-6 col-sm-3">
          <div class="square" style="background:#4C4743">
            <div class="content">
              <div class="table">
                <div class="table-cell numbers">
                  <center>
                    <h1 style="font-size:6em; font-weight:100; line-height:1em;"><%= @friends_cards.where(gift: true).count %></h1>
                    <h4>GIFT</h4>
                  </center>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-10 col-md-offset-1" style="color:white; border:1px solid #ccc; padding:10px; margin-bottom:20px;">
        <%= form_tag edit_multiple_friends_cards_path, method: :get do %>
        <table class="table table-striped table-responsive">
          <thead>
            <tr>
              <th></th>
              <th>Name</th>
              <th>Email</th>
              <th>Ic number</th>
              <th>Date of birth</th>
              <th>Contact number</th>
              <th>Shipping address</th>
              <th>Expiry date</th>
              <th>Payment Method</th>
              <th>Gift</th>
              <th>Transaction</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @friends_cards.each do |friends_card| %>
            <tr>
              <td><%= check_box_tag "friends_card_ids[]", friends_card.id %></td>
              <td><%= friends_card.name %></td>
              <td><%= friends_card.email %></td>
              <td><%= friends_card.ic_number %></td>
              <td><%= friends_card.date_of_birth %></td>
              <td><%= friends_card.contact_number %></td>
              <td><%= friends_card.shipping_address %></td>
              <td><%= friends_card.expiry_date.strftime("%m/%d/%Y") %></td>
              <td><% if friends_card.paypal == true %>
                <span class="label label-success">PAYPAL</span>
                <% else %>
                <span class="label label-danger">DIRECT BANK TRANSFER</span>
                <% end %>
              </td>
              <td><% if friends_card.gift == true %>
                <span><i class="fa fa-times-circle fa-lg" aria-hidden="true" style="color:#d9534f"></i></span>
                <% else %>
                <span><i class="fa fa-check-circle fa-lg" aria-hidden="true" style="color:#5cb85c"></i></span>
                <% end %>
              </td>
               <td><% if friends_card.paid == true %>
                <span class="label label-success">PAID</span>
                <% else %>
                <span class="label label-danger">PROCESSING</span>
                <% end %>
              </td>
              <td><%= link_to edit_friends_card_path(friends_card), remote: true do %>
                <i class="fa fa-pencil"></i><% end %>
              </td>
              <td><%= link_to friends_card, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash-o"></i><% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <center><%= submit_tag "Edit FRIENDS Cards", class: "btn btn-large btn-raised btn-primary" %></center>
        <% end %>
      </div>
    </div>
  </div>
</div>
















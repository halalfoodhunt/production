<div class="container-fluid sign-up">
  <div class="container container-table">
    <div class="row vertical-center-row">
      <div class="col-xs-12 col-md-12" style="padding-left:0px; padding-right:0px; box-shadow: 0 27px 24px 0 rgba(0,0,0,.2),0 40px 77px 0 rgba(0,0,0,.22);">
        <div class="col-xs-12 col-sm-6 col-md-4 sign-up-left" style="padding-left:0px; padding-right:0px;">
          <span class="visible-md-block visible-lg-block">
            <img src="http://halalfoodhunt.com/wp-content/uploads/2016/03/places-1.jpg" class="img-responsive" alt="Responsive image">
          </span>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-8" style="background:rgba(255,255,255,0.6);">
          <p><center><img src="http://halalfoodhunt.com/wp-content/uploads/2016/03/HFFH_LOGO.png" alt="halalfoodhunt logo" class="img-rounded" style="width:100px; height:80px;"></center></p>
          <h3><center>FRIENDS SIGN UP</center></h3>
          <p><center>Log in here if you already have an account with us.</center>
          </p><hr>
        </center>
        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>
        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign Up", { class: 'btn btn-block btn-raised btn-primary' } %>
        </div>
        <% end %>
        <center><%= render "devise/shared/links" %></center>
      </div>
    </div>
  </div>
</div>
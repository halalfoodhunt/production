<%= render 'layouts/friends_header' %>
<div class="container-fluid padding-0" style="border-top: 1px solid #ccc; border-bottom: 1px solid #ccc;">
	<div class="container" style="margin-top:52px;">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#df5b3e; width:25px; height:25px;">
					<h5 style="color:white;">1</h5>
					</div>
					<p>Sign Up</p>
			</center>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#ccc; width:25px; height:25px;">
					<h5>2</h5>
					</div>
					<p>Payment Details</p>
			</center>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#ccc; width:25px; height:25px;">
					<h5>3</h5>
					</div>
					<p>Transaction Complete</p>
			</center>
		</div>
	</div>
</div>
<div class="container-fluid" style="background:white; height:100%;">
	<div class="container">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-35">
			<center>
				<p><b>Create an Account</b></p>
				<p>Already have an account? <%= render "devise/shared/links" %></p>
			</center>
			<%= bootstrap_form_for(@friend, as: @friend, url: friend_registration_path(@friend), label_errors: true, inline_errors: true) do |f| %>
			<div class="field">
				<%= f.text_field :name, autofocus: true %>
			</div>
			<div class="field">
				<%= f.email_field :email, autofocus: true %>
			</div>
			<div class="field">
				<%= f.password_field :password, autocomplete: "off" %>
				<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
				<% end %><br />
			</div>
			<br>
			<p>By creating an account, you agree to our <a href="#">terms.</a></p>
			<%= f.submit 'Continue', :class => 'btn btn-block btn-primary' %><br>
			<% end %>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-35">
			<div style="border: 1px solid #ccc; background:#ececec; padding:20px;">
				<h4>Order Summary</h4>
				<hr>
				<!-- Left-aligned -->
				<div class="media">
					<div class="media-left">
						<img src="http://friends.jumaiyah.com/wp-content/uploads/2017/04/friendscard_card-01.png" class="media-object" style="width:150px">
					</div>
					<div class="media-body">
						<h4 class="media-heading">BE OUR FRIEND, FOR ONLY $18/YEAR.</h4>
						<p>DEAR HALAL FOODIES, EATERS OF HALAL FOOD, FRIENDS. YOU WILL BE REWARDED FOR CHOOSING HALAL.</b><br><br>
        We made this one with all our halal food hunters in mind. All merchants listed with halalfoodhunt.com are either halal-certified or Muslim-owned.</p>
						<h6>Quantity: 1@$18.00/Year</h6>
						<hr>
						<div><p class="text-left"><strong>Total: $18/Year</strong></p></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
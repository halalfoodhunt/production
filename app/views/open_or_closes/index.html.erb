 <div class="container-fluid admin_dashboard-full-height">
   <div class="row">
    <%= render 'layouts/admin_sidebar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main-admin" style="padding:0;">
      <%= render 'layouts/topbar' %>
      <div style="color:white; margin-bottom:30px; border:#ccc solid 1px;" class="col-md-10 col-md-offset-1">
        <center>
          <h2 class="form-subtitle">Open or Close</h2>
          <p>Add and manage your opening or closing days here! You may add as many opening or closing days as you want.<br></p>
          <%= link_to 'New Open or Close', new_open_or_close_path, remote: true, :class => 'btn btn-md btn-raised btn-primary' %>
        </center><br>
        <p id="notice"><%= notice %></p>
        </div>
        <div style="color:white; margin-bottom:30px;" class="col-md-10 col-md-offset-1">
        <table class="table table-responsive" style="background:#31313a">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
           <%= render "index" %>
         </tbody>
       </table>
       <br>
     </div>
   </div>
 </div>
</div>
<div id="open-or-close-modal" class="modal fade"></div>

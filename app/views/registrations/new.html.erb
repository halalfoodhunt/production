<%= render 'layouts/friends_header' %>
<div class="container-fluid padding-0" style="border-top: 1px solid #ccc; border-bottom: 1px solid #ccc;">
	<div class="container" style="margin-top:52px;">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#df5b3e; width:25px; height:25px;">
					<h5 style="color:white; line-height:1.8;">1</h5>
					</div>
					<p>Sign Up</p>
			</center>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#ccc; width:25px; height:25px;">
					<h5 style="line-height:1.8;">2</h5>
					</div>
					<p style="color:#ccc;">Payment Details</p>
			</center>
		</div>
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<center>
				<div style="border-radius:25px; background:#ccc; width:25px; height:25px;">
					<h5 style="line-height:1.8;">3</h5>
					</div>
					<p style="color:#ccc;">Transaction Complete</p>
			</center>
		</div>
	</div>
</div>
<div class="container-fluid" style="background:white;">
	<div class="container">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-35">
				<p>Please fill in these details for your friends card subscription.</p>
       <%= bootstrap_form_for @registration do |f| %>
 <% if @registration.errors.any? %>
 <div id="error_explanation">
  <h2>
    <%= pluralize(@registration.errors.count, "error") %>
    prohibited this registration from being saved:
  </h2>
  <ul>
    <% @registration.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<h4>Registration Details</h4>
<div class="field">
  <%= f.hidden_field :friends_card_id, value: @friends_card.id %>
</div>
<div class="field">
  <%= f.text_field :name, label: 'Name on card' %>
</div>
<div class="field">
  <%= f.text_field :ic_number %>
</div>
<div class="field">
  <%= f.date_select :date_of_birth, start_year: 1950, order: [:day, :month, :year] %>
</div>
<div class="field">
  <%= f.email_field :email %>
</div>
<div class="field">
  <%= f.text_field :contact_number %>
</div>
<div class="field">
  <%= f.text_field :instagram_account %>
</div>
<label>Where did you hear about us?</label>
<div class="field">
  <%= f.check_box :facebook_ads %>
</div>
<div class="field">
  <%= f.check_box :facebook_newsfeed %>
</div>
<div class="field">
  <%= f.check_box :facebook_video %>
</div>
<div class="field">
  <%= f.check_box :instagram %>
</div>
		</div>
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 padding-35">
			<h4>Shipping Details</h4>
<div class="field">
  <%= f.text_field :address_1 %>
</div>
<div class="field">
  <%= f.text_field :address_2 %>
</div>
<div class="field">
  <%= f.text_field :city %>
</div>
<div class="field">
  <%= f.text_field :zipcode %>
</div>
<div class="field">
  <%= f.text_area :notes, label:"Order Notes" %>
</div>
<h4>Payment Details</h4>
<div class="field payment_method">
  <%= label_tag :payment_method %>
  <br>
  <%= radio_button_tag :payment_method, "paypal" %>
  <%= image_tag "http://friends.jumaiyah.com/wp-content/uploads/2017/08/196566.png" %><br>
  <script>
              $(document).on("click", "#new_registration input[type='radio']",
                function(e) {
                  if ($("#payment_method_card:checked").val() == "card") {
                    $("fieldset.card_info").show();
                  }
                  else {
                    $("fieldset.card_info").hide();
                  }
                });
  </script>
			<div style="border: 1px solid #ccc; background:#ececec; padding:20px;">
				<h4>Order Summary</h4>
				<hr>
				<!-- Left-aligned -->
				<div class="media">
					<div class="media-left">
						<img src="http://friends.jumaiyah.com/wp-content/uploads/2017/04/friendscard_card-01.png" class="media-object" style="width:150px">
					</div>
					<div class="media-body">
						<h4 class="media-heading" style="line-height:1.3">FRIENDS REWARDS CARD $18/YEAR</h4>
						<p>Dear Halal Foodies, Eaters of Halal Food, FRIENDS. You will be rewarded for choosing Halal.</b><br><br>
        We made this one with all our halal food hunters in mind. All merchants listed with halalfoodhunt.com are either halal-certified or Muslim-owned.</p>
						<h6>Quantity: 1</h6>
						<hr>
						<div><p class="text-left"><strong>Total: $18/Year</strong></p></div>
						<div class="actions">
  <%= f.submit "Proceed To Payment", class: "btn", style: "color: white;background: rgb(242, 118, 73);" %>
  </div>
  <script>
  
  $("form#new_registration").submit( function() {
    $(this).find('input[type=submit]').attr('disabled', 'disabled');
    $(this).find('input[type=submit]').val("Submitting, please wait ...")
  });

  </script>
</div>
<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
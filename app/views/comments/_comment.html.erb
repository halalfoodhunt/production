<div class="comment clearfix">
	<div class="comment_content">
		<p><%= comment.content %></p>
		<p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
	</div>

	<% if friend_signed_in? %>
	<p><%= link_to 'Delete', [comment.place, comment], method: :delete, class: "button", data: { confirm: 'Are you sure?' } %></p>
 	<% end %>
</div>
<div class="comment clearfix">
	<div class="comment_content">
		 <p><%= image_tag(comment.friend.avatar.url(:thumb), :class => "img_circle", :style => "width:30px; height:30px;") %> <b><%= comment.friend.name %></b> <small><%= time_ago_in_words(comment.created_at) %> ago</small></p>
		 <p><%= comment.content %></p>
	</div>

	<% if (friend_signed_in? && (current_friend.id == comment.friend.id)) %>
	<p><%= link_to 'Delete', [comment.place, comment], method: :delete, class: "button", data: { confirm: 'Are you sure?' } %></p>
 	<% end %>
</div>
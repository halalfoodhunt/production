<% @places.each do |place| %>
    <% unless place.friends_rewards_terms.blank? %>
      <div class="four columns alpha">
       <div class="card-container">
        <div class="card">
          <div class="front">
            <div class="cover">
              <%= image_tag place.featured_image.url(:square), :class => "img-responsive" %>
            </div>
            <div class="user">
              <%= image_tag place.friends_reward.icon.url(:large), :class => "img-circle img_responsive" %>
            </div>
            <div class="content">
              <div class="main">
                <h6><%= link_to place_path(place) do %><strong><%= place.business_name %></strong><% end %></h6>
                <small class="profession"><i class="fa fa-map-marker"></i><%= place.operating_address %></small>
              </div>
            </div>
          </div> <!-- end front panel -->
          <div class="back">
            <div class="header">
              <h5 class="motto"></h5>
            </div>
            <div class="content">
              <div class="main">
                <h4 class="text-center"><%= place.friends_reward.name %></h4>
                <hr>
                <small class="text-center"><%= place.friends_rewards_terms %></small><br><br>
                <h6><%= link_to place_path(place), class:"btn_normal padding_5" do %><strong>View Merchant Details</strong><% end %></h6>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
















    <div class="col-xs-12 col-sm-6 col-md-3" >
      <!--Rotating card-->
      <div class="card-wrapper">
        <div id="card-1" class="card-rotating effect__click">
          <!--Front Side-->
          <div class="face front">
            <!-- Image-->
            <div class="card-up">
              
            </div>
            <!--Avatar-->
            <div class="avatar">
            </div>
            <!--Content-->
            <div class="card-block" style="padding:0 5px 0 5px;">
              <h5 style="margin:0;"></h5>
              <p style="margin:0;"><i class="fa fa-map-marker"></i> </p><br>
              <!--Triggering button-->
              <p><a class="rotate-btn btn btn-primary btn-sm" data-card="card-1"> <i class="fa fa-repeat"></i> Read terms here.</a></p>
            </div>
          </div>
          <!--/.Front Side-->
          <!--Back Side-->
          <div class="face back">
            <!--Content-->
            <h4></h4>
            <hr>
            <p></p>
            <hr>
            <!--Triggering button-->
            <a class="rotate-btn btn btn-primary btn-sm" data-card="card-1"><i class="fa fa-undo"></i> Click here to rotate back</a>
          </div>
          <!--/.Back Side-->
        </div>
      </div>
      <!--/.Rotating card-->
    </div>
    <% end %>
    <% end %>
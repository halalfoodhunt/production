<% @places.each do |place| %>
<div class="four columns  alpha">
  <div class="bg_Homes">
    <% if place.verified == true %>
    <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><%= image_tag(place.qualifying_type.icon.url(:square), :class => "img-responsive") %></span>
    <% else %>
    <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:5%;"><img class="img_responsive" src="http://s3.amazonaws.com/international-hfh/verifying_types/icons/000/000/002/square/Listing_Icons_Artboard_12.png?1487060601" alt="Chania" style="width:40px; height:40px;"></span><% end %>
    <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:20%;"><%= image_tag place.place_type.icon.url(:square), :class => "img_responsive" %></span>
    <span class="top-label" style="position:absolute; z-index:100; padding:5px; left:37%;">
      <% unless place.friends_rewards_terms.blank? %>
      <%= image_tag place.friends_reward.icon.url(:square), :class => "img_responsive" %>
      <% end %>
    </span>
    <div class="img_homes_st"><%= link_to place_path(place) do %><%= image_tag place.featured_image.url(:large), :class => "img_responsive" %><% end %></div>
    <div class="text_homes_style">
     <div class="caption">
      <div class="media">
        <div class="media-left">
          <%= image_tag place.logo.url(:medium), :class => "img-circle-40" %>
        </div>
        <div class="media-body">
          <p class="media-heading label-list"><b><%= link_to place.business_name, place_path(place) %></b></p>
          <p><i class="fa fa-map-marker"></i> <%= place.operating_address %></p>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
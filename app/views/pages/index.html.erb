            </ul>
            <div class="tab-content">
              <div id="home" class="tab-pane fade in active">
               <div class="col-md-12" style="background:#fff; padding-left:0; padding-right:0; box-shadow:0px 0px 6px 0px rgba(0,0,0,0.4)">
                <%= search_form_for @search_place do |f| %>
                <div class="col-sm-12 col-md-12" style="padding:20px">
                  <div class="form-group" style="margin-bottom: 0; background: rgba(255,255,255,1); color:black;">
                   <label for="Search" class="label-front">What kind of food are you looking for?</label>
                   <%= f.text_field :business_name_or_operating_address_cont, class: "form-control", :style => "height:42px;", placeholder: "Type: Nasi, Rojak, etc." %>
                 </div>
                 <br>
                 <div class="col-sm-12 col-md-6" style="padding:2px">
                   <%= f.collection_select(:cuisine_types_id_eq_any, CuisineType.all, :id, :name, {:include_blank => "Menu Types"}, {:class=>'form-control'}) %><br>
                   <%= f.collection_select(:dining_types_id_eq_any, DiningType.all, :id, :name, {:include_blank => "Dining Types"}, {:class=>'form-control'}) %>
                 </div>
                 <div class="col-sm-12 col-md-6" style="padding:2px">
                  <%= f.collection_select(:highlights_id_eq_any, Highlight.all, :id, :name, {:include_blank => "Highlights"}, {:class=>'form-control'}) %><br>
                  <%= f.collection_select(:location_id_eq, Location.order(:name), :id, :name, {:include_blank => "Locations"}, {:class=>'form-control'}) %><br>
                </div>
                <br>
                <div>
                  <%= f.submit "Search", class: "submit_btn orange_bg pix_text", :style => "background:#e73c25; color:#fff; border:0;" %>
                </div>
                <% end %>

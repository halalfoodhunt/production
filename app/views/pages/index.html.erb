<%= render 'layouts/header' %>
<div class="container-fluid full-container">
  <div class="container">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="col-xs-12 col-sm-12 col-md-6 margin-bottom-20">
        <h2 class="margin-top-60 index-header"><b>Discover</b> and <b class="text-red">verify</b> your halal food choices here!</h2>
        <div class="col-xs-12 col-sm-12 col-md-6"></div>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 border-2 padding-8">
       <%= search_form_for @search do |f| %>
       <div class="col-xs-12 col-sm-12 col-md-8">
        <label for="Search" class="label-front">What kind of food are you looking for?</label>
        <%= f.text_field :business_name_or_operating_address_or_question_1_cont, class: "form-control input-lg", placeholder: "Type: Nasi, Rojak, etc." %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-2">
       <label for="Category" class="label-front">Where?</label>
       <select class="form-control input-lg">Categories</select>
     </div>
     <div class="col-xs-12 col-sm-12 col-md-2">
      <label for="Search" class="label-front"></label>
      <%= f.submit "Search", class: "btn btn-block btn-raised btn-danger" %>
    </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
    <br><br>
    <ul class="nav nav-tabs responsive-tabs">
      <li class="active"><a href="#home"><b>RECOMMENDED</b></a></li>
      <li><a href="http://sg.halalfoodhunt.com/places">PLACES</a></li>
      <li><a href="#homies">HOMIES</a></li>
      <li><a href="#caterers">CATERERS</a></li>
      <li><a href="#food-deliveries">FOOD DELIVERIES</a></li>
      <li><a href="#supermarkets">SUPERMARKETS</a></li>
      <li><a href="#lessons">LESSONS</a></li>
      <li><a href="#online-grocers">ONLINE GROCERS</a></li>
      <li><a href="#suppliers">SUPPLIERS</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content padding-0">
      <div role="tabpanel" class="tab-pane active padding-0" id="home">
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8"><h4 class ="category-title">Places</h4></div>
        <div class="col-xs-12 col-sm-12 col-md-4"><p class ="text-right"><%= link_to places_path do %>See All <i class="fa fa-angle-right fa-lg"></i><% end %></p></div>
        <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
          <%= render "places/place" %>
          </div>
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8"><h4 class ="category-title">Homies</h4></div>
        <div class="col-xs-12 col-sm-12 col-md-4"><p class ="text-right"><%= link_to ecommers_path do %>See All <i class="fa fa-angle-right fa-lg"></i><% end %></p></div>
        <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
          <%= render "ecommers/ecommers" %>
        </div>
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8"><h4 class ="category-title">Food Deliveries</h4></div>
        <div class="col-xs-12 col-sm-12 col-md-4"><p class ="text-right"><%= link_to food_deliveries_path do %>See All <i class="fa fa-angle-right fa-lg"></i><% end %></p></div>
        <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
          <%= render 'food_deliveries/food_delivery_home' %>
        </div>
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8"><h4 class ="category-title">Online Grocers</h4></div>
        <div class="col-xs-12 col-sm-12 col-md-4"><p class ="text-right"><%= link_to online_grocers_path do %>See All <i class="fa fa-angle-right fa-lg"></i><% end %></p></div>
        <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
          <%= render "online_grocers/online_grocer" %>
        </div>
        <br>
        <div class="col-xs-12 col-sm-12 col-md-8"><h4 class ="category-title">Suppliers</h4></div>
        <div class="col-xs-12 col-sm-12 col-md-4"><p class ="text-right"><%= link_to suppliers_path do %>See All <i class="fa fa-angle-right fa-lg"></i><% end %></p></div>
        <div class="col-xs-12 col-sm-12 col-md-12 padding-0">
          <%= render "suppliers/suppliers" %>
        </div>
        </div>
      <div role="tabpanel" class="tab-pane" id="homies">
          <br>
          <%= render "ecommers/ecommers" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="caterers">
          <br>
          <%= render "caterers/caterers" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="food-deliveries">
          <br>
          <%= render 'food_deliveries/food_delivery_home' %>
      </div>
      <div role="tabpanel" class="tab-pane" id="supermarkets">
          <br>
          <%= render "supermarkets/supermarket" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="lessons">
          <br>
          <%= render "lessons/lessons" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="online-grocers">
          <br>
          <%= render "online_grocers/online_grocer" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="suppliers">
          <br>
          <%= render "suppliers/suppliers" %>
      </div>
    </div>
  </div>
</div>
</div>

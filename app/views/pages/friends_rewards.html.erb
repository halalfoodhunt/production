<%= render 'layouts/friends_header' %>
<div class="container-fluid friends-rewards" style="margin-top:50px; padding:20px 0 20px 0;">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <center><h3 style="color:#ffffff; text-shadow: 1px 2px 1px rgba(0, 0, 0, 1);">Friends Rewards Card:<br>Unlock savings and privileges when you choose halal!</h3>
      <a href="http://www.friends.halalfoodhunt.com" class="btn btn-lg btn-danger" role="button">Get FRIENDS Card Now!</a></center>
    </div>
  </div><div class="container-fluid" style="padding:0;">
  <div class="col-xs-12 col-sm-12 col-md-12" style="padding-top:20px; background:#f8f3f0; border-bottom:1px solid #ccc;">
    <%= render 'friends_search' %>
  </div>
</div>
<div class="container">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="col-xs-12 col-sm-12 col-md-10"><h5 style="padding:20px 0">SHOWING <b><%= @places.where.not(friends_reward_id: nil).count %></b> FRIENDS REWARDS IN ALL CITIES, SINGAPORE</h5></div>
    <div class="col-xs-12 col-sm-12 col-md-2 text-right" style="margin-top:20px;">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Filter by
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><center><h5><%= sort_link(@search, :business_name, 'A-Z', default_order: :asc) %></h5></center></li>
            <li><center><h5><%= sort_link(@search, :business_name, 'Z-A', default_order: :desc) %></h5></center></li>
            <li><center><h5><%= sort_link(@search, :created_at, 'Recent', default_order: :desc) %></h5></center></li>
            <li><center><h5><%= sort_link(@search, :created_at, 'Oldest', default_order: :asc) %></h5></center></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <% @places.each do |place| %>
        <% unless place.friends_rewards_terms.blank? %>
        <div class="four columns alpha">
         <div class="card-container">
          <div class="card">
            <div class="front">
              <div class="cover">
                <%= image_tag place.featured_image.url(:square) %>
              </div>
              <div class="user">
                <%= image_tag place.friends_reward.icon.url(:large) %>
              </div>
              <div class="content">
                  <h6><strong><%= place.business_name %></strong></h6>
                  <small class="profession"><i class="fa fa-map-marker"></i> <%= place.operating_address %></small>
              </div>
            </div> <!-- end front panel -->
            <div class="back">
              <div class="header">
                <h5 class="motto"></h5>
              </div>
              <div class="content">
                  <h4 class="text-center"><%= place.friends_reward.name %></h4>
                  <hr>
                  <small class="text-center"><%= place.friends_rewards_terms %></small><br><br>
                  <h6><%= link_to place_path(place), class:"btn_normal padding_5" do %><strong>View Merchant Details</strong><% end %></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
<%= render 'layouts/footer' %>

<div class="col-xs-12 col-sm-12 col-md-12">
  <div class="col-sm-12 col-md-12" style="padding:0">
    <h6 style="text-align:left">Search for a reward</h6>
  </div>
  <div class="col-sm-12 col-md-6" style="padding:2px">
    <div class="dropdown">
      <button class="btn btn-block btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Listings
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><h5><%= link_to 'Places', pages_places_friends_rewards_path %></h5></li>
          <li><h5><%= link_to 'Ecommers', pages_ecommers_friends_rewards_path %></h5></li>
          <li><h5><%= link_to 'Caterers', pages_caterers_friends_rewards_path %></h5></li>
        </ul>
      </div>
      <br>
    </div>
    <div class="col-sm-12 col-md-6" style="padding:2px">
     <div class="dropdown">
      <button class="btn btn-block btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Rewards
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><%= link_to 'All Friends Rewards', pages_friends_rewards_path %></li>
          <% FriendsReward.all.each do |reward| %>
          <li>
            <%= link_to reward.name, pages_friends_rewards_path(friends_reward: reward.name) %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
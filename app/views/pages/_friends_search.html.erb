<div class="col-md-10 col-md-offset-1">
<%= search_form_for @search, url: pages_places_friends_rewards_path do |f| %>
  <div class="col-xs-12 col-sm-12 col-md-5" style="padding:0">
    <div class="form-group" style="color:black;">
      <%= f.text_field :business_name_or_operating_address_cont, class: "form-control" %>
      <br>
    </div>
    </div>
     <div class="col-xs-12 col-sm-12 col-md-1" style="padding:0"><%= f.submit "Search", class: "btn btn-raised btn-block btn-primary" %>
     </div>
<% end %>
 
    <div class="col-sm-12 col-md-3" style="padding-right:0">
     <div class="dropdown">
      <button class="btn btn-block btn-default dropdown-toggle" type="button" data-toggle="dropdown">Rewards
        <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li><center><h4><%= link_to 'All Friends Rewards', pages_friends_rewards_path %></h4></center></li>
          <% FriendsReward.all.each do |reward| %>
          <li>
            <center><h4><%= link_to reward.name, pages_friends_rewards_path(friends_reward: reward.name) %></h4></center>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>